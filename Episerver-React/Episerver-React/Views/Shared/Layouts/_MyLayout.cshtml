@using System.Web.Optimization
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @Styles.Render("~/Content/css")
    <title>@ViewBag.Title</title>
</head>
<body>

    <div class="topnav" id="myTopnav">
        @Html.ActionLink("Home", "Index", "PresentationPage", null, new { @class = "active" })
        @Html.ActionLink("About", "About", "PresentationPage")
        @Html.ActionLink("Products", "Index", "Products")

        <a href="javascript:void(0);" class="icon" onclick="myFunction()">
            <i class="fa fa-bars"></i>
        </a>
        @using (Ajax.BeginForm("Search", "PresentationPage", new AjaxOptions
        {
            HttpMethod = "get",
            InsertionMode = InsertionMode.Replace,
            UpdateTargetId = "products-table"
        }
       ))
        {
            <input type="search" name="SearchString" />
            <input type="submit" value="Search Products" />
        }
    </div>

    <div class="content">
        @RenderBody()
    </div>



    <div class="footer">
        <p>Episerver MVC</p>
    </div>

    @*@Scripts.Render("~/bundles/jquery")*@

</body >
</html >
