@model Episerver_React.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/Layouts/_MyLayout.cshtml";
}



<div class="product-display">

    <header>
        <hgroup>
            <h1>@Html.DisplayFor(p => p.Name)</h1>
            <h4>@Html.DisplayFor(p => p.Description)</h4>
        </hgroup>
    </header>

    <figure>
        <img class="product-image" src="@Html.DisplayFor(p => p.Image)">
    </figure>

    <section>

        <p>The faster dual-core A5 chip. The 8MP camera with all-new optics also shoots 1080p HD video. And introducing Siri. It's the most amazing iPhone yet.</p>

        <details>
            <summary>Product Features</summary>
            <ul>
                <li>8 mega pixel camera with full 1080p video recording</li>
                <li>Siri voice assitant</li>
                <li>iCloud</li>
                <li>Air Print</li>
                <li>Retina display</li>
                <li>Photo and video geotagging</li>
            </ul>
        </details>

        <button>Buy Now</button>

    </section>

</div>
